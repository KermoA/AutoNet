@model IEnumerable<AutoNet.Models.Cars.UserCarsViewModel>

<h1>My Cars</h1>

<table class="table">
    <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>Fuel</th>
            <th>Mileage</th>
            <th>Engine</th>
            <th>Power</th>
            <th>Transmission</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Make</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td>@car.Fuel</td>
                <td>@car.Mileage</td>
                <td>@car.EngineDisplacementInLiters</td>
                <td>@car.Power</td>
                <td>@car.Transmission</td>
                <td><a asp-action="Update" asp-controller="Cars" asp-route-id="@car.Id" class="btn btn-primary">Update</a></td>
                <td>
                    <form method="post" asp-action="Delete" asp-route-id="@car.Id">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this car?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

