@model AutoNet.Models.Accounts.RegisterViewModel

@{
	ViewBag.Title = "User Registration";
}

<div class="container col-12">
	<div class="row">
		<div class="col-12 col-sm-8" style="background-image: url('/images/cars-login.jpg'); background-size: cover; background-position: center;" )">
		</div>
		<div class="col-12 col-sm-4">
			<form method="post">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group mb-2">
					<input asp-for="Email" class="form-control input-custom-background" placeholder="Email" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
				<div class="form-group mb-2">
					<input asp-for="FirstName" class="form-control input-custom-background" placeholder="First Name" />
				</div>
				<div class="form-group mb-2">
					<input asp-for="LastName" class="form-control input-custom-background" placeholder="Last Name" />
				</div>
				<div class="form-group mb-2">
					<input asp-for="Password" class="form-control input-custom-background" placeholder="Password" />
				</div>
				<div class="form-group mb-2">
					<input asp-for="ConfirmPassword" class="form-control input-custom-background" placeholder="Confirm Password" />
				</div>
				<button type="submit" class="btn btn-register w-100">
					Sign Up
				</button>
			</form>
			<p class="text-center">Already have an account? <a asp-action="Login" asp-controller="Accounts">Sign In</a></p>
		</div>
	</div>
</div>



